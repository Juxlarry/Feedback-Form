<p id="notice"><%= notice %></p>

<h1>Rating Scores</h1>

<table>
  <thead>
    <tr>
      <th>Score name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rating_scores.each do |rating_score| %>
      <tr>
        <td><%= rating_score.score_name %></td>
        <td><%= image_tag(rating_score.score_emojis, style: "width:50px") %></td>
        <td><%= link_to 'Show', rating_score %></td>
        <td><%= link_to 'Edit', edit_rating_score_path(rating_score) %></td>
        <td><%= link_to 'Destroy', rating_score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rating Score', new_rating_score_path %>
